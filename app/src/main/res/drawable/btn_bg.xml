<?xml version="1.0" encoding="utf-8"?>


<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#3700B3"/> <!-- Pressed color -->
            <corners android:radius="20dp"/>
            <padding
                android:left="16dp"
                android:top="8dp"
                android:right="16dp"
                android:bottom="8dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#6200EE"/> <!-- Normal color -->
            <corners android:radius="20dp"/>
            <padding
                android:left="16dp"
                android:top="8dp"
                android:right="16dp"
                android:bottom="8dp"/>
        </shape>
    </item>
</selector>

